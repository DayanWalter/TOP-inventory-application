extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Category:
      input#name.form-control(type='text', placeholder='Elektroartikel, Sportkleidung,...' name='name' value=(undefined===category ? '' : category.name), required="true")
    div.form-group
      label(for='description') Description:
      input#description.form-control(type='text', placeholder='All the Clothes you can imagine...' name='description' value=(undefined===category ? '' : category.description), required="true")
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg
