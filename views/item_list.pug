extends layout

block content
  h1= title

  ul
    each item in item_list
      li
        a(href=item.url) #{item.name}
        br
        |  (#{item.description})
        br
        a(href=item.category.url) #{item.category.name}
        br
        | #{item.price} €
        br
        | #{item.stock} Stück
        hr

    else
      li There are no items.